<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/LatestMessageRow_Picture_ImageView_ID"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/btn_dialog"
        app:civ_border_width="2dp"
        app:civ_border_color="@android:color/black"/>

    <TextView
        android:id="@+id/LatestMessageRow_Username_TextView_ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/LatestMessageRow_LatestMessage_TextView_ID"
        app:layout_constraintStart_toEndOf="@+id/LatestMessageRow_Picture_ImageView_ID"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="Username"/>

    <TextView
        android:id="@+id/LatestMessageRow_LatestMessage_TextView_ID"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Latest Message, this text should wrap there should be no bleeding so lets test it now please and thank you"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/LatestMessageRow_Picture_ImageView_ID"
        app:layout_constraintTop_toBottomOf="@+id/LatestMessageRow_Username_TextView_ID" />
</androidx.constraintlayout.widget.ConstraintLayout>